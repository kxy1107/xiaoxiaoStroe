/* pages/huawei/huawei.wxss */

.null-hint {
  margin: 60rpx 10rpx 0 10rpx;
  padding: 40rpx 0;
  border-radius: 5rpx;
  text-align: center;
  background-color: #fff;
  font-size: 33rpx;
}

.item-container {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  margin-top: 10rpx;
}

.huawei-scroll {
  background-color: #ececec;
}

.shop-item {
  display: flex;
  flex-direction: column;
  width: 50%;
  box-sizing: border-box;
  padding: 5rpx;
}

.shop-info {
  background-color: #fff;
  padding-bottom: 10rpx;
}

.huawei-item-img {
  width: 365rpx;
  height: 365rpx;
}

.huawei-item-title {
  font-size: 28rpx;
  max-width: 345rpx;
  color: #c3c3c3;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.shop-title {
  max-width: 345rpx;
  display: block;
  
}

.item-price {
  font-size: 30rpx;
  color: red;
  flex: 1;
}

.item-sales {
  font-size: 20rpx;
  color: #c3c3c3;
  margin-left: 15rpx;
  text-align: right;
  flex: 1;
  padding: 5rpx 10rpx;
}
